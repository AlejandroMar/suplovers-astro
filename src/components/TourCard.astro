---
import { Image } from "astro:assets";
const { tour } = Astro.props;
---

<div class="mb-5 px-4 w-full md:w-1/2 xl:w-1/4">
  <div class="bg-soft_yellow-500 p-3">
    <div>
      <Image src={tour.data.card.image.src} alt="tour" />
    </div>
    <div class="bg-background_cyan-500 p-5">
      <h3 class="font-paragraphs font-extrabold text-2xl text-white uppercase">
        {tour.data.card.title}
      </h3>
      <p class="leading-snug mt-4 text-white">
        {tour.data.card.paragraph}
      </p>
      <a
        href={tour.data.card.button_link}
        class="uppercase inline-block bg-yellow-500 font-medium font-paragraphs mt-5 px-4 py-2 rounded-lg"
      >
        {tour.data.card.button_text}
      </a>
    </div>
  </div>
</div>
