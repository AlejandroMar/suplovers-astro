<style>
  .classes-photos-container {
    //height: 80vh;
    box-shadow: 3px 3px 4px rgba(0, 0, 0, 0.25);
  }

  .rental-card {
    height: 450px;
  }

  @media (min-width: 640px) {
    .rental-card {
      height: 600px;
